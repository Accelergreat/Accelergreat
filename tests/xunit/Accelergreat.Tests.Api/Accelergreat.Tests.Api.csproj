    <ProjectReference Include="..\..\apis\Accelergreat.Tests.TestApi\Accelergreat.Tests.TestApi.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="accelergreat.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="xunit.runner.json">
